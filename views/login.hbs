<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="../css/check.css" />
    <link rel="stylesheet" href="../css/login.css" />
  </head>
  <body>
    {{! Navigation Bar }}
    <div class="navbar-wrapper">
      <nav class="navbar">
        <div class="navbar-logo"><span>UNPLAGRIZ</span></div>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="">About</a></li>
          <li><a href="/login">Login</a></li>
          <li><a href="/signup">Sign Up</a></li>
        </ul>
      </nav>
    </div>

    <main class="main-section">
      <div class="adj-back"></div>
      <form class="form-container" action="/login" method="POST">
        <h1 class="sign-logo">Login</h1>
        <span>
          Not a Member?
          <a href="/signup" class="login-link">Sign Up!</a>
        </span>
        <div class="frm-text">
          <input
            type="text"
            name="email"
            value="{{email}}"
            id="email"
            required
          />
          <label for="frm-text" class="text-label">Username</label>
          <span></span>
        </div>
        <div class="frm-text password">
          <input type="password" name="pass" id="pass" required />
          <label for="frm-pass" class="text-label">Password</label>
          <span></span>
        </div>
        <div class="forgot-pass">
          <a href="">Forgot Password?</a>
        </div>
        <div class="frm-submit">
          <input type="submit" />
        </div>
        {{#if authErr}}
          <div class="auth-err">Incorrect Username or Password!</div>
        {{/if}}

      </form>
    </main>
    <script
      src="https://code.jquery.com/jquery-3.6.3.js"
      integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
      crossorigin="anonymous"
    ></script>
    <script src="../js/login.js"></script>
  </body>
</html>