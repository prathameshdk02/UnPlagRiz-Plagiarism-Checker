    <div class="section-wrapper" id="section-wrap-1">
      <header class="checker-header">
        <h1>UnPlagRiz Plagiarism Checker</h1>
        <p>
          Powered by Copyleaks, Find out tiny bits of Plagiarism in the texts!
        </p>
        <p>Insert some text to check for!</p>
      </header>

      <section class="checker-section">
        <textarea
          name="check_area"
          id="check_area"
          placeholder="Enter some text here!"
        ></textarea>
        <div class="btn-container">
          <button name="scan_btn" id="scan_btn">Scan for Plagiarism</button>
          <button>
            <i class="fa-solid fa-arrow-up-from-bracket"></i>Upload a File
          </button>
        </div>
      </section>
    </div>

    <div class="section-wrapper" id="section-wrap-results">
        <section class="checker-results">
            <h2 id="result-heading">Results</h2>
            <p id="result-splash"></p>
            <div class="attribute-wrapper">
            <span class="result-attribute">Total Words: <span id="results_totalWords">0</span></span>
            <span class="result-attribute">Identical Words: <span id="results_identicalWords">0</span></span>
            <span class="result-attribute">Minor Change Words: <span id="results_minorChangeWords">0</span></span>
            <span class="result-attribute">Plagiarism Score: <span id="results_aggregatedScore">0</span></span>
            </div>

            <div class="result-url-container" id="results-container"></div>
        </section>
    </div>

